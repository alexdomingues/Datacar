@*<p>Nome: @((MarkupString)@driver.Name)</p>*@
<div class="row individual-driver-component">
    <div class="col col-lg-6 col-md-6">
        <p>Nome: @Driver.Name</p>
    </div>
    <div class="col col-lg-3 col-md-2">
        <a href="@driverUrl" class="btn btn-warning">Edit</a>
    </div>
    <div class="col col-lg-3 col-md-3">
        <button class="btn btn-danger" @onclick="@(()=>DeleteDriver.InvokeAsync(Driver))">Delete</button>
    </div>
</div>

@code {
    [Parameter] public Drivers Driver { get; set; }
    [Parameter] public EventCallback<Drivers> DeleteDriver { get; set; }

    private string driverUrl = string.Empty;

    protected override void OnInitialized()
    {
        driverUrl = $"/drivers/edit/{Driver.Id}";
    }
}
