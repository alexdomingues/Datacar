<GenericList List="DatacarUser">
    <ElementTemplate Context="user">
        <UserIndividual User="user" DeleteUser="DeleteUser" ListType="@ListType"></UserIndividual>
    </ElementTemplate>
</GenericList>

@code{
    [Parameter] public string ListType { get; set; }

    [Parameter] public List<DatacarUser> DatacarUser { get; set; }

    protected override void OnInitialized()
    {
        Console.WriteLine($"Userlist List type = {ListType}");
    }

    //private async Task DeleteDriver(Drivers driver)
    private void DeleteUser(DatacarUser user)
    {
        // Modal com confirmação
        Console.WriteLine($"Utilizador apagada");
        DatacarUser.Remove(user);
    }
}